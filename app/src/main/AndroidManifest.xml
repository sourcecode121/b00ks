<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.b00ks">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".di.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.DetailsActivity"
            android:parentActivityName=".view.MainActivity"/>

        <activity android:name=".view.FindBooksActivity"
            android:parentActivityName=".view.MainActivity"/>

        <meta-data android:name="api-key"
            tools:replace="android:value"
            android:value="@string/api_key_string"/>
    </application>

</manifest>